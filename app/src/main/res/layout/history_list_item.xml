<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date &amp; time:"
        android:textColor="#6b6b6b"
        android:id="@+id/dateText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/rehab_history_date"
        android:layout_alignBottom="@+id/dateText"
        android:layout_toEndOf="@+id/dateText"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Duration:"
        android:textColor="#6b6b6b"
        android:id="@+id/textView14"
        android:layout_below="@+id/dateText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large "
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/rehab_history_duration"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toEndOf="@+id/textView14"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Exceeded max:"
        android:textColor="#6b6b6b"
        android:id="@+id/textView15"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/rehab_history_duration"
        android:layout_toEndOf="@+id/rehab_history_duration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/rehab_history_exceeded"
        android:layout_marginStart="21dp"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comment:"
        android:textColor="#6b6b6b"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/rehab_history_comment"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignStart="@+id/rehab_history_duration" />

</RelativeLayout>